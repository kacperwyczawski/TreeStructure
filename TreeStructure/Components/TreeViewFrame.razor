@using TreeStructure.Services
@inject NodeService NodeService

@if (NodeService.GetRootNodes(Sort).Any())
{
    foreach (var rootNodeId in NodeService.GetRootNodes(Sort).Select(n => n.Id))
    {
        <MudPaper Class="py-4 pr-5 my-5 mx-auto" MaxWidth="1200px">
            <TreeViewRecursive NodeId="@rootNodeId"/>
        </MudPaper>
    }
}
else
{
    <MudPaper Class="pa-5 my-5 mx-auto" MaxWidth="1200px">
        <MudStack Row="true">
            <MudIcon Icon="@Icons.Outlined.Info"/>
            <MudText Typo="Typo.body1">
                Add some nodes manulally or use sample data button to see tree structure
            </MudText>
        </MudStack>
    </MudPaper>
}

@code {
    
    [CascadingParameter]
    public NodeService.Sort Sort { get; set; }
    
    public void Refresh()
    {
        StateHasChanged();
    }

}