@using TreeStructure.Services
@inject NodeService NodeService

<MudPaper Class="pa-5 my-5 mx-auto">
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Outlined.Workspaces"
               Class="ma-2" Color="Color.Primary" OnClick="OnSampleData">
        Sample data
    </MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Outlined.Delete"
               Class="ma-2" Color="Color.Error" OnClick="OnDeleteAll">
        Delete all
    </MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Outlined.ExpandLess"
               Class="ma-2" Color="Color.Primary" OnClick="OnCollapseAll">
        Collapse all
    </MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Outlined.ExpandMore"
               Class="ma-2" Color="Color.Primary" OnClick="OnExpandAll">
        Expand all
    </MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Outlined.Add"
               Class="ma-2" Color="Color.Success" OnClick="OnAddRoot">
        Add root
    </MudButton>
</MudPaper>

@code {

    [Parameter]
    public EventCallback OnDeleteAll { get; set; }

    [Parameter]
    public EventCallback OnSampleData { get; set; }

    [Parameter]
    public EventCallback OnCollapseAll { get; set; }

    [Parameter]
    public EventCallback OnExpandAll { get; set; }

    [Parameter]
    public EventCallback OnAddRoot { get; set; }

}